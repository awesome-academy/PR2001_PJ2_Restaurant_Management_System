<%= render "shared/error_messages", object: order if order.errors.any? %>
  <div class="form-group">
    <%= form.label :messages, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :people, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= number_field_tag :people , :people , min:0 %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :timeorder , class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.datetime_field :timeorder, class: "form-control" , min: Date.today %>
    </div>
  </div>

  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10 row">
  


    <div class="col-sm-6 text-right">   
      <div class="next">
      <button type="button" class="btn btn-primary js-button-next" data-step-index="0">
          Next Step
        </button>
      </div>
    </div>
  </div>
</div>
